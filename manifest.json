{
  "manifest_version": 2,
  "name": "skipmediumwall",
  "description": "skip medium's paywall",
  "version": "0.1",
  "background": {
    "scripts": ["background.js"]
  },
  "icons": {
    "16": "images/icon16.png",
    "32": "images/icon32.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "browser_action": {
    "default_icon": {
      "16": "images/icon16.png",
      "32": "images/icon32.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    },
    "default_popup": "menu.html",
    "default_title": "Skip Wall"
  },
  "permissions": [
    "activeTab",
    "permissions",
    "webRequest",
    "webRequestBlocking",
    "https://*/*",
    "http://*/*"
  ]
}
